doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title CandyLand - Your sugar rush stop!
    link(rel='stylesheet', href='CSS/style.css')
  body
    header
      nav
        ul
          li
            a(href='/') Home
          li
            a(href='#') Products
          li
            a(href='/about') About
          li
            a(href='/contact') Contact

    main
      .hero
        h1 Welcome to CandyLand
        p Your sugar rush stop!

      section#featured-products
        h2 Featured Products
        each product in products
          .product-card
            img(src=`${product.image}`, alt=`${product.name}`) 
            h3 #{product.name}
            p CAD #{product.price}
          
